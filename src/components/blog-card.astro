<div class="h-[600px] w-[400px] flex flex-col items-center">
  <header class="relative w-[400px]">
    <img
      src="/hero-image-business-card.png"
      alt="Business card image"
      class="w-[400px] rounded-xl bottom-0"
    />
    <img
      src="/white-overlay.svg"
      alt="ovelaty"
      class="absolute z-100 w-[400px] -bottom-[1px] rounded-b-xl"
    />
  </header>
  <main class="w-[340px]">
    <div class="flex flex-col gap-6">
      <h2 class="font-Poppins font-[600] text-xl">
        Perfect solution for small business
      </h2>
      <div>
        <p class="font-Lato text-base text-[#677489]">
          Small businesses need to generate leads to grow.
        </p>
        <p class="font-Lato text-base text-[#677489]">
          You can use tools like Ringy
        </p>
      </div>
    </div>
  </main>
  <footer class="w-[340px] mt-[50px]">
    <div class="flex gap-5 items-center">
      <div>
        <img
          src="/avatar-image-business-card.png"
          alt="Avatar business card"
          class="w-[32px] h-[32px] rounded-full"
        />
      </div>
      <div>
        <h4 class="font-Lato font-bold">Amy Burgess</h4>
        <p class="font-Lato text-base text-[#677489]">
          Customer Manger, Solution Oy
        </p>
      </div>
    </div>
  </footer>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap");
